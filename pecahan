<!-- Bootstrap Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  const fractionRange = document.getElementById("fractionRange");
  const water = document.getElementById("water");
  const fractionValue = document.getElementById("fractionValue");

  function updateGlass() {
    let fraction = parseFloat(fractionRange.value);
    water.style.height = (fraction * 100) + "%";
    fractionValue.textContent = fraction.toFixed(1);
  }

  fractionRange.addEventListener("input", updateGlass);
  updateGlass(); // set awal
</script>

